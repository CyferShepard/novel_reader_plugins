{
  "url": "https://novelbuddy.io${0}",
  "type": "GET",
  "body": "",
  "bodyType": "JSON",
  "query": [
    {
      "label": "url",
      "getContent": true,
      "withHref": false,
      "selectItemsAtIndex": []
    },
    {
      "label": "title",
      "element": ".detail>.name.box>h1",
      "getContent": true,
      "withHref": false,
      "selectItemsAtIndex": []
    },
    {
      "label": "summary",
      "element": ".summary>p",
      "getContent": true,
      "withHref": false,
      "selectItemsAtIndex": []
    },
    {
      "label": "tags",
      "element": ".tags>a",
      "getContent": true,
      "withHref": false,
      "selectItemsAtIndex": []
    },
    {
      "label": "Author",
      "element": ".detail>.meta.box>p>a>span",
      "getContent": true,
      "withHref": false,
      "selectItemsAtIndex": [
        0
      ]
    },
    {
      "label": "Status",
      "element": ".detail>.meta.box>p>a>span",
      "getContent": true,
      "withHref": false,
      "selectItemsAtIndex": [
        1
      ]
    },
    {
      "label": "Genres",
      "element": ".detail>.meta.box>p",
      "getContent": true,
      "withHref": false,
      "selectItemsAtIndex": [
        2
      ],
      "regex": {
        "regex": "^Genres :\\s*",
        "process": "(match)=>match?.input?.replace(match[0], \"\") ?? \"\""
      }
    },
    {
      "label": "Chapters",
      "element": ".detail>.meta.box>p>span",
      "getContent": true,
      "withHref": false,
      "selectItemsAtIndex": [
        0
      ]
    },
    {
      "label": "LastUpdate",
      "element": ".detail>.meta.box>p>span",
      "getContent": true,
      "withHref": false,
      "selectItemsAtIndex": [
        1
      ]
    },
    {
      "label": "AdditionalProps",
      "element": ".layout",
      "getContent": true,
      "withHref": false,
      "subQuery": [
        {
          "label": "BookId",
          "element": "script",
          "getContent": true,
          "withHref": false,
          "selectItemsAtIndex": [
            0
          ],
          "regex": {
            "regex": "var bookId = (\\d+);",
            "process": "(match)=>match ? match[1] : null"
          }
        }
      ],
      "selectItemsAtIndex": []
    }
  ]
}